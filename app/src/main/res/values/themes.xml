<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FitMeal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorPrimary">#FFD700</item>
        <item name="colorPrimaryDark">#C7A500</item>
        <item name="colorAccent">#FFD700</item>
    </style>

    <style name="FitMealEditText">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="FitMealButton">
        <item name="android:backgroundTint">#FFD700</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="FitMealTitle">
        <item name="android:textColor">#FFD700</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
</resources>